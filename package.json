{
  "name": "@cvut/fittable-widget",
  "version": "0.8.1",
  "description": "Flexible calendar widget for fittable written in JavaScript",
  "main": "dist/app.js",
  "author": "Marián Hlaváč",
  "repository": {
    "type": "git",
    "url": "https://github.com/cvut/fittable-widget"
  },
  "bugs": {
    "url": "https://github.com/cvut/fittable-widget/issues"
  },
  "scripts": {
    "lint": "eslint src",
    "clean": "rimraf dist/",
    "prebuild": "npm run clean",
    "prepublish": "npm run build",
    "build": "npm-run-all -p build:prod build:npm build:assets",
    "build:dev": "webpack -d",
    "build:prod": "webpack --optimize-minimize",
    "build:npm": "babel --out-dir dist src",
    "build:assets": "node script/build-static",
    "start": "npm run build:assets && webpack-dev-server --content-base dist/ --hot -d",
    "watch": "webpack -d --watch",
    "test:watch": "rerun-script",
    "test": "babel-tape-runner 'test/**/*.test.js' | tap-spec"
  },
  "dependencies": {
    "babel": "^5.8.21",
    "counterpart": "^0.16.9",
    "curry-d": "^0.6.0",
    "file-loader": "^0.8.4",
    "font-awesome": "^4.4.0",
    "hammerjs": "^2.0.4",
    "moment": "^2.10.6",
    "moment-timezone": "^0.4.0",
    "ramda": "^0.17.1",
    "react": "^0.14.0-beta3",
    "react-dom": "^0.14.0-beta3",
    "react-redux": "^1.0.1",
    "redux": "^1.0.1"
  },
  "devDependencies": {
    "autoprefixer-loader": "^2.0.0",
    "babel-core": "^5.8.22",
    "babel-eslint": "^4.1.0",
    "babel-loader": "^5.3.2",
    "babel-tape-runner": "^1.2.0",
    "blue-tape": "^0.1.10",
    "css-loader": "^0.16.0",
    "eslint": "^1.2.1",
    "eslint-config-standard": "^4.1.0",
    "eslint-config-standard-react": "^1.0.4",
    "eslint-plugin-react": "^3.2.3",
    "extract-text-webpack-plugin": "^0.8.2",
    "foundation-sites": "^5.5.2",
    "json-loader": "^0.5.2",
    "node-sass": "^3.3.2",
    "npm-run-all": "^1.2.8",
    "redux-devtools": "^1.1.1",
    "rerun-script": "^0.6.0",
    "rimraf": "^2.4.2",
    "sass-loader": "^2.0.1",
    "shelljs": "^0.5.3",
    "style-loader": "^0.12.3",
    "tap-spec": "^4.1.0",
    "timekeeper": "0.0.5",
    "webpack": "^1.12.0",
    "webpack-dev-server": "^1.10.1"
  },
  "publishConfig": {
    "registry": "https://repository.fit.cvut.cz/npm"
  },
  "license": "MIT",
  "watches": {
    "test": [ "src/**/*.js", "src/**/*.jsx", "test/**/*.js" ]
  }
}
